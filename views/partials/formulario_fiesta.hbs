<div class="general">
  <form action="/crearevento" method="post">
    <div class="row">
      <div class="col-4">
        <div class="form-group">
          <h5>Datos del Evento</h5>
          <input
            type="text"
            class="form-control"
            id="inputAgasajado"
            placeholder="Nombre/s Agasajado/s"
            name="nombreAgasajado"
          />
        </div>
        <br>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="NumInvitados"
            placeholder="Número de Invitados"
            name="numInvitados"
          />
        </div>
        <br />
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="inputDiaEvento"
            placeholder="Dia Evento"
            name="diaEvento"
          />
        </div>
        <br>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="horaEvento"
            placeholder="Hora Evento"
            name="horaEvento"
          />
        </div>
        <br>
        <div class="form-group">
          <h5>Datos del Lugar del Evento<h5>
          <br>
          <input
            type="text"
            class="form-control"
            id="nombreLugar"
            placeholder="Nombre del Lugar"
            name="lugarEvento"
          />
          <br>
          <input
            type="text"
            class="form-control"
            id="direccionLugar"
            placeholder="Direccion del Lugar"
            name="direccion"
          />
          <br>
          <input
            type="text"
            class="form-control"
            id="provincia"
            placeholder="Provincia"
            name="provincia"
          />
          <br>
          <input
            type="text"
            class="form-control"
            id="localidad"
            placeholder="Localidad"
            name="localidad"
          />
          <br>
          <input
            type="text"
            class="form-control"
            id="codigoPostal"
            placeholder="Codigo Postal"
            name="codigoPostal"
          />
        </div>
        <br />
        <div class="form-group">
          <h5>Datos de Misa</h5>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="tieneMisa" onclick="manageMisa();">
            <label class="form-check-label" for="tieneMisa">
              Se realiza misa
            </label>
          </div>
          <br>
        </div>
        <div class="form-group">
          <input 
            type="text" 
            class="form-control"
            id="iglesia" 
            placeholder="Nombre Iglesia" 
            name="iglesia" 
            disabled />
        </div>
        <br>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="horaMisa"
            placeholder="Hora Misa"
            name="horaMisa"
            disabled
          />
        </div>
        <br>
        <h5>Datos Extras</h5>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="cuentaRegresivaCheck" name="cuentaRegresiva"> 
          <label class="form-check-label" for="cuentaRegresivaCheck">
            Añadir cuenta regresiva
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="cbuCheckBox" onclick="manageCbu();">
          <label class="form-check-label" for="cbuCheckBox">
            Añadir CBU para petición de colaboración o Regalo
          </label>
        </div>
        <br>
        <div class="form-group">
          <input 
            type="text" 
            class="form-control"
            id="cbu" 
            placeholder="CBU" 
            name="cbu" 
            disabled />
        </div>
        <br>
        <div class="mb-3">
          <label for="formFile" class="form-label"><h5>Elegir Imagen para tu Tarjeta</h5></label>
          <input class="form-control" type="file" id="imagenTarjeta" />
        </div>
        <br />
      </div>
      <div class="col-8">
        <h2>Selecciona una Plantilla</h2>
        <div class="gallery">
          <div class="row">
            <div class="col-3">
              <div class="thumbs">
                <div
                  class="thumb active"
                  style="background-image: url(../imagenes/card1.jpg)"
                ></div>
                <div
                  class="thumb"
                  style="background-image: url(../imagenes/card2.jpg)"
                ></div>
                <div
                  class="thumb"
                  style="background-image: url(../imagenes/card3.jpg)"
                ></div>
                <div
                  class="thumb"
                  style="background-image: url(../imagenes/card4.jpg)"
                ></div>
              </div>
            </div>
            <div class="col">
              <div class="images">
                <div class="image active">
                  <div
                    class="content"
                    style="background-image: url(../imagenes/card1.jpg)"
                  ></div>
                </div>
                <div class="image">
                  <div
                    class="content"
                    style="background-image: url(../imagenes/card2.jpg)"
                  ></div>
                </div>
                <div class="image">
                  <div
                    class="content"
                    style="background-image: url(../imagenes/card3.jpg)"
                  ></div>
                </div>
                <div class="image">
                  <div
                    class="content"
                    style="background-image: url(../imagenes/card4.jpg)"
                  ></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Crear Evento</button>
      </div>
    </div>
  </form>
</div>

<script src="js/main.js"></script>
<script>
  function manageMisa() {
    let checked = document.getElementById('tieneMisa').hasAttribute('checked');

    if(checked) {
      document.getElementById('tieneMisa').removeAttribute('checked');
      document.getElementById('iglesia').value = '';
      document.getElementById('iglesia').setAttribute('disabled', '');
      document.getElementById('horaMisa').setAttribute('disabled','');
      
    } else {
      document.getElementById('tieneMisa').setAttribute('checked', '');
      document.getElementById('iglesia').removeAttribute('disabled');
      document.getElementById('horaMisa').removeAttribute('disabled');
    }
  }

  function manageCbu (){
    let checkedCbu = document.getElementById('cbuCheckBox').hasAttribute('checked');

    if (checkedCbu){
      document.getElementById('cbuCheckBox').removeAttribute('checked');
      document.getElementById('cbu').value='';
      document.getElementById('cbu').setAttribute('disabled', '');
    }else{
      document.getElementById('cbuCheckBox').setAttribute('checked', '');
      document.getElementById('cbu').removeAttribute('disabled');
    }
  }
  
</script>