<div class="container">
  <div class="row">
    <div class="col">
      <div
        id="carouselExampleSlidesOnly"
        class="carousel slide"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item" data-bs-interval="2000">
            <img src="../imagenes/0.jpg" class="d-block w-100" alt="1" />
          </div>
          <div class="carousel-item" data-bs-interval="2000">
            <img src="../imagenes/1.jpg" class="d-block w-100" alt="2" />
          </div>
          <div class="carousel-item active" data-bs-interval="2000">
            <img src="../imagenes/2.jpg" class="d-block w-100" alt="3" />
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="d-flex align-items-center justify-content-center">
        <img src="../imagenes/logo.png" width="300" alt="" />
      </div>
      <form action="/altausuario" method="post">
        <div class="mb-4">
          <label for="email" class="form-label">Correo Electrónico</label>
          <input type="email" class="form-control" name="email" />
        </div>
        <div class="mb-4">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" />
        </div>

        <div class="mb-4">
          <label for="password" class="form-label">Repetir Password</label>
          <input type="password" class="form-control" name="repetirpassword" />
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Registro</button>
        </div>
        <div class="my-3">
          <span>¿Ya tienes cuenta? <a href="/login">Inicia Sesión</a></span>
          <br />
        </div>
      </form>
    </div>

  </div>
</div>
<script src="bootstrap.bundle.min.js"></script>